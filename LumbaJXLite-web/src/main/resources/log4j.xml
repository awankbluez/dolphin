               value="INSERT INTO system_log (userid, systemdate, logger, level, message) VALUES ('%X{userid}', '%d{dd.MM.yyyy HH:mm:ss}', '%C', '%p', '%m')"
             />
       </layout>
    </appender>-->

    <logger name="com.vaia.lumbajxlite.web">
        <level value="debug"/>
        <!--<appender-ref ref="JDBCAppender"></appender-ref>-->
    </logger>

    <logger name="net.sf.jasperreports">
        <level value="info"/>
    </logger>

    <logger name="com.ocpsoft">
        <level value="info"/>
    </logger>

    <logger name="org.primefaces">
        <level value="info"/>
    </logger>

    <logger name="org.jooq">
        <level value="debug"/>
    </logger>

    <logger name="com.mchange.v2">
        <level value="info"/>
    </logger>

    <logger name="javax.faces">
        <level value="info"/>
    </logger>

    <logger name="com.sun.faces">
        <level value="info"/>
    </logger>

    <logger name="org.apache.commons">
        <level value="info"/>
    </logger>

    <root>
        <priority value ="debug" />
        <appender-ref ref="console" />
        <appender-ref ref="fileAppender" />
        <!--<appender-ref ref="JDBCAppender" />-->
    </root>
</log4j:configuration>